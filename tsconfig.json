{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es6"],
      "declaration": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*",
      ".storybook/**/*"
    ],
    "exclude": ["node_modules", "dist"]
  }